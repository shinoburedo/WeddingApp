<div class="cosinfo-dialog">

    <form class="form-horizontal">

        <input type="hidden" name="info_id" id="hdnInfoId" data-bind="value: cos_info.info_id"  />

        <div class="form-group">
            <label for="drpPaxType" class="col-sm-3 control-label">Type</label>
            <div class="col-sm-2">
                <select id="drpPaxType"
                        style="width:95%;"
                        data-role="dropdownlist"
                        data-value-primitive="true"
                        data-value-field="pax_type"
                        data-text-field="description"
                        data-bind="value: cos_info.pax_type, source: paxTypeList, disabled: isDisabled"></select>
            </div>
        </div>

        <div class="form-group">
            <label for="txtPaxName" class="col-sm-3 control-label">Height</label>
            <div class="col-sm-2">
                <input type="text" id="txtHeight"
                       maxlength="15"
                       class="form-control input-sm k-input k-textbox w100 tohankaku "
                       data-bind="value: cos_info.height, disabled: isDisabled" />
            </div>
            <label for="txtJpnZip" class="col-sm-1 control-label">Chest</label>
            <div class="col-sm-2">
                <input type="text" id="txtChest"
                       maxlength="15"
                       class="form-control input-sm k-input k-textbox w100 tohankaku "
                       data-bind="value: cos_info.chest, disabled: isDisabled" />
            </div>
            <label for="txtAddrKana1" class="col-sm-1 control-label">Waist</label>
            <div class="col-sm-2">
                <input type="text" id="txtWaist"
                       maxlength="15"
                       class="form-control input-sm k-input k-textbox w100 tohankaku"
                       data-bind="value: cos_info.waist, disabled: isDisabled" />
            </div>
        </div>

        <div class="form-group">
            <label for="txtAddrKanji1" class="col-sm-3 control-label">Cloth Size</label>
            <div class="col-sm-2">
                <input type="text" id="txtClothSize"
                       maxlength="15"
                       class="form-control input-sm k-input k-textbox w100 tohankaku"
                       data-bind="value: cos_info.cloth_size, disabled: isDisabled" />
            </div>
            <label for="txtAddrKana2" class="col-sm-2 control-label">Shoe Size</label>
            <div class="col-sm-2">
                <input type="text" id="txtShoeSize"
                       maxlength="15"
                       class="form-control input-sm k-input k-textbox w100 tohankaku"
                       data-bind="value: cos_info.shoe_size, disabled: isDisabled" />
            </div>
        </div>

        <div class="form-group">
            <label for="txtAddrKanji2" class="col-sm-3 control-label">Note</label>
            <div class="col-sm-12">
                <input type="text" id="txtNote"
                       class="form-control input-sm k-input k-textbox w100 tohankaku"
                       data-bind="value: cos_info.note, disabled: isDisabled" />
            </div>
        </div>

        <div class="bottom-buttons">
            <input type="button" value=" SAVE "
                   class="btn btn-danger" style="width:100px;display:none;"
                   data-bind="click: onOkClick, disabled: isDisabled, visible:isSaveButtonVisible" />

            <input type="button" value="Close"
                    class="btn btn-default" style="width:100px; margin-left: 100px;"
                    data-bind="click: closeDialog" />
        </div>

</form>
</div>


