<div id="editWindow"
     data-role="window"
     data-visible="false"
     data-modal="true"
     data-min-width="500"
     data-width="600"
     data-min-height="400"
     data-height="500"
     style="display:none;">

    <div id="editDiv">
        <form class="form-horizontal" data-role="validator">
            <div class="form-group">
                <label for="item_type" class="col-sm-4 control-label required">Item Type</label>
                <div class="col-sm-2">
                    <input name="item_type" type="text" data-bind="value: model.item_type, enabled: isCodeEditable"
                           maxlength="3" required
                           class="form-control input-sm k-input k-textbox toupper tohankaku" />
                </div>
            </div>

            <div class="form-group">
                <label for="desc_eng" class="col-sm-4 control-label">Description Eng</label>
                <div class="col-sm-9">
                    <input name="desc_eng" type="text" data-bind="value: model.desc_eng" maxlength="30" 
                           class="form-control input-sm k-input k-textbox " />
                </div>
            </div>

            <div class="form-group">
                <label for="desc_jpn" class="col-sm-4 control-label">Description Jpn</label>
                <div class="col-sm-9">
                    <input name="desc_jpn" type="text" data-bind="value: model.desc_jpn" maxlength="30"
                           class="form-control input-sm k-input k-textbox " />
                </div>
            </div>

            <div class="form-group">
                <label for="info_type" class="col-sm-4 control-label">Info Type</label>
                <div class="col-sm-9">
                    <select name="info_type" 
                           data-role="dropdownlist"
                           data-bind="value: model.info_type, source:infoTypes" 
                           class="form-control input-sm" 
                           style="width:70px;" ></select>
                </div>
            </div>

            @* Saveボタン、Closeボタン *@
            <div class="buttons">
                <input id="btnEditSave" type="button" value="Save" data-bind="click:onSave" class="btn btn-primary btn-save" />
                <input id="btnEditClose" type="button" value="Close" data-bind="click: onClose" class="btn btn-default btn-close" />
            </div>
        </form>
    </div>

</div> @* End of editWindow *@

