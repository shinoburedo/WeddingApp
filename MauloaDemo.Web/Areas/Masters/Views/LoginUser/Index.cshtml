@{
}

@section head{
    <link href="@Url.Content("~/Areas/Masters/Content/masters.css")" rel="stylesheet" type="text/css" />
}

<div class="app_wrapper">
    <h3>Users</h3>

    <div id="app">
        @* 検索パネル *@
        <div class="search clearfix">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="" class="col-sm-1 control-label">Login Id</label>
                    <div class="col-sm-1">
                        <input type="text" data-bind="value: search.login_id, events: {change: refreshList }" 
                               maxlength="15"
                               class="form-control input-sm k-input k-textbox toupper tohankaku" />
                    </div>
                    <label for="" class="col-sm-1 control-label">Name</label>
                    <div class="col-sm-2">
                        <input type="text" data-bind="value: search.user_name, events: { change: refreshList }" 
                               maxlength="100"
                                class="form-control input-sm k-input k-textbox" />
                    </div>

                    <label for="" class="col-sm-2 control-label">Agent Cd</label>
                    <div class="col-sm-4">
                        <input type="text" 
                               data-value-primitive="true"
                               data-bind="value: search.sub_agent_cd, events: { change: refreshList }" 
                               class="form-control input-sm select-subagent" />
                    </div>

                    @if (ViewBag.CountUsersWithNoPassword > 0) {
                        <button type="button"
                                data-bind="click: onSetAutoPwd"
                                class="btn btn-danger pull-right"
                                style="margin-right:20px;">
                            Set default temp pwd for @(ViewBag.CountUsersWithNoPassword) @(ViewBag.CountUsersWithNoPassword > 1 ? "users" : "user")
                        </button> 
                    }
                </div>
            </form>
        </div>

        @* 検索結果の一覧グリッド *@
        <div id="grd"
             data-role="grid"
             data-bind="source: list"
             data-toolbar="[{name:'create', text:'Create New'}, {name:'copy', text:'Copy'}, {name:'destroy', text:'Delete' }, {name: 'refresh', text:'Refresh'}]"
             data-selectable="true"
             data-sortable="true"
             data-resizable="true"
             data-scrollable="true"
             data-height="560"
             data-columns="[  {field: 'login_id', title: 'Login Id', width: 100}
                            , {field: 'e_last_name', title: 'Last'}
                            , {field: 'e_first_name', title: 'First'}
                            , {field: 'j_last_name', title: 'Last'}
                            , {field: 'j_first_name', title: 'First'}
                            , {field: 'sub_agent_cd', title: 'Agent Cd', width: 100}
                            , {field: 'access_level', title: 'Level', width: 60}
                            , {field: 'update_date', title: 'Updated', width:160, format: '{0:MM/dd/yyyy HH:mm:ss}' }
                            , {field: 'login_id', title: ' ', width: 60, template: '<a data-key=\'#=login_id#\' class=\'btn btn-sm btn-default grid_edit_button\' data-bind=\'click:editItem\'><span class=\'k-icon k-edit\'><\/span><\/a>'}
                        ]"></div>
    </div>

    @* 詳細編集ダイアログ *@
    @Html.Partial("LoginUserEditPartial")
</div>

@section scripts {
<script src="@Url.Content("~/Scripts/require.min.js")"
            data-main="@Url.Content("~/Areas/Masters/Scripts/LoginUserIndexView")"></script>
}


