@{
    ViewBag.Title = "Schedule Note Template";
}

@section head{
    <link href="@Url.Content("~/Areas/Masters/Content/masters.css")" rel="stylesheet" type="text/css" />
}

<div class="app_wrapper">
    <h3>@ViewBag.Title</h3>

    <div id="app">
        @* 検索パネル *@
        <div class="search clearfix">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="" class="col-sm-1 control-label">Code</label>
                    <div class="col-sm-2">
                        <input type="text" data-bind="value: search.template_cd, events: {change: refreshList }" 
                               maxlength="20"
                               class="form-control input-sm k-input k-textbox toupper tohankaku" />
                    </div>
                    <label for="" class="col-sm-1 control-label">Title</label>
                    <div class="col-sm-4">
                        <input type="text" data-bind="value: search.title, events: {change: refreshList }"
                               maxlength="80"
                               class="form-control input-sm k-input k-textbox " />
                    </div>
                </div>
            </form>
        </div>

        @* 検索結果の一覧グリッド *@
        <div id="grd"
             data-role="grid"
             data-bind="source: list"
             data-toolbar="[{name:'create', text:'Create New'}, {name:'copy', text:'Copy'}, {name:'destroy', text:'Delete' }, {name: 'refresh', text:'Refresh'}]"
             data-selectable="true"
             data-sortable="true"
             data-resizable="true"
             data-scrollable="true"
             data-height="560"
             data-columns="[  {field: 'template_cd', title: 'Code', width: 150}
                            , {field: 'title_jpn', title: 'Title Jpn'}
                            , {field: 'title_eng', title: 'Title Eng'}
                            , {field: 'last_person', title: 'Last person', width:80}
                            , {field: 'update_date', title: 'Updated', width:160, format: '{0:MM/dd/yyyy HH:mm:ss}' }
                            , {field: 'template_cd', title: ' ', width: 60, template: '<a data-key=\'#=template_cd#\' class=\'btn btn-sm btn-default grid_edit_button\' data-bind=\'click:editItem\'><span class=\'k-icon k-edit\'><\/span><\/a>'}
                        ]"></div>
    </div>

    @* 詳細編集ダイアログ *@
    @Html.Partial("ScheduleNoteTemplateEditPartial")
</div>

@section scripts {
<script src="@Url.Content("~/Scripts/require.min.js")"
            data-main="@Url.Content("~/Areas/Masters/Scripts/ScheduleNoteTemplateIndexView")"></script>
}